    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.hidden_field :next_step, value: '3' %>

      <div class="field">
      
      <%= f.label :business_name, :class => 'inline' %>
      <%= f.text_field :business_name %><br />
      
      </div>

      <div class="field">

      <%= f.label :account_type, :class => 'inline' %>
      <%= f.text_field :account_type, :disabled => true, :value => 'sole trader' %><br />
      
      </div>
      
      <div class="field">

      <%= f.label :business_type_id, :class => 'inline' %>
      <%= f.collection_select(:business_type_id, BusinessType.all, :id, :business)%><br />
      
      </div>
      
      <%= fields_for :address do |a| %>
      
      <div class="field">

      <%= a.label :address1, "Business Address", :class => 'inline' %>
      <%= a.text_field :address1 %><br />
      
      </div>
      
      <div class="field">

      <%= a.label :address2, ".", :class => 'inline hidden' %>
      <%= a.text_field :address2 %><br />
      
      </div>
      
      <div class="field">

      <%= a.label :address3, ".", :class => 'inline hidden' %>
      <%= a.text_field :address3 %><br />
      
      </div>
      
      <div class="field">

      <%= a.label :city, "City", :class => 'inline' %>
      <%= a.text_field :city %><br />
      
      </div>
      
      <div class="field">

      <%= a.label :county, "County", :class => 'inline' %>
      <%= a.text_field :county %><br />
      
      </div>
      
      <div class="field">

      <%= a.label :post_code, "Post Code", :class => 'inline' %>
      <%= a.text_field :post_code %><br />
      
      </div>
      
      <div class="field">

      <%= a.label :country, "Country", :class => 'inline' %>
      <%= a.text_field :country %><br />
      
      </div>
      
      <% end %>
      
      <div class="field">

      <%= f.label :home_phone, "Home Phone", :class => 'inline' %>
      <%= f.text_field :home_phone %><br />
      
      </div>
      
      <div class="field">

      <%= f.label :mobile, "Mobile", :class => 'inline' %>
      <%= f.text_field :mobile %><br />
      
      </div>

      <div class="actionContainer">
      
      <%= f.submit "Save changes", class: "" %>
      
      </div>
    <% end %>

