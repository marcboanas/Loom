<% provide(:title, 'Payment History') %>

<div class="section-container">

<div class="form-section">

<h2>Payment history</h2>

<table class="payment_history">

<tr>
<th>Payment date</th>
<th>Amount</th>
</tr>

<% @payments.payment_history.each do |p| %>

<tr>

<td><%= Time.at(p['date']).strftime("%m/%d/%Y")%></td>

<td><%= currency(p['amount']) %></td>

</tr>

<% end %>

</table>

</div>

</div>