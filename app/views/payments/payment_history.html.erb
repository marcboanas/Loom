<% provide(:title, 'Payment History') %>

<div class="section-container">

<div class="tabs">

<div class="tab active">Payments</div>

</div>

<div class="form-section">

<h2>Payment history</h2>

<table class="payment_history">

<tr>
<th>Payment date</th>
<th>Amount</th>
</tr>

<% if @payments.empty? %>

<tr><td>Your payment history is empty.</td></tr>

<% else %>

<% @payments.each do |p| %>

<% p.payment_history.each do |p| %>

<tr>

<td><%= Time.at(p['date']).strftime("%m/%d/%Y")%></td>

<td><%= currency(p['amount']/100) %></td>

</tr>

<% end %>

<% end %>

<% end %>

</table>

</div>

</div>