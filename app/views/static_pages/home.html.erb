<% provide(:title, 'Home') %>

<% if signed_in? %>

<body style="background-image: none !important"></body>

<% else %>

<div class="home-header"></div>

<div class="home-tag">

<h1>A Super Simple Fixed Fee Accountancy Service.</h1>

<div class="sticker"></div>

</div>

<div class="home">
<div class="home-form">

<div class="stamp"></div>

<div class="title">Sign up and get started today</div>

<%= form_tag('/signup', :method => 'get') %>

<div class="field">
<%= text_field_tag 'first_name', nil, :placeholder => 'First name' %>
<%= text_field_tag 'last_name', nil, :placeholder => 'Last name' %>
</div>

<div class="field">
<%= text_field_tag 'email', nil, :placeholder => 'Email', :class => "larger" %>
</div>

<%= submit_tag "Get Started" %><span>7 Day <b>FREE</b> Trial Period</span>

</div>

<div class="why"></div>

<% end %>

</div>



